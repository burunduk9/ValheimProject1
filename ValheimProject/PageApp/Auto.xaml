<Page x:Class="ValheimProject.PageApp.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ValheimProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="Autorization" FontSize="24" Margin="10"/>
            <Label Content="login"/>
            <TextBox x:Name="txtLog" Margin="10"/>
            <Label Content="password"/>
            <PasswordBox x:Name="txtPas" Margin="10"/>
            <Button x:Name="btnLog" Content="Auto" Click="btnLog_Click" Width="120" Height="35"/>
        </StackPanel>
    </Grid>
</Page>
